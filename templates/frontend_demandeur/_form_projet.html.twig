{{ form_start(form) }}
<div class="card">
    <div class="card-body">
        <div class="row form-group">
            <div class="col-md-4 mt-3">
                {{ form_row(form.categorie) }}
            </div>
            <div class="col-8 mt-3">
                {{ form_row(form.title) }}
            </div>
            <div class="col-md-4 mt-3">
                {{ form_row(form.localite) }}
            </div>
            <div class="col-md-8 mt-3">
                {{ form_row(form.lieu) }}
            </div>
            <div class="col-md-6 mt-3">
                {{ form_row(form.datePrestation) }}
            </div>
            <div class="col-md-6 mt-3">
                {{ form_row(form.dateLimite) }}
            </div>
            <div class="col-md-4 mt-3">
                {{ form_row(form.preference)}}
            </div>
            <div class="col-6 col-md-4 mt-3">
                {{  form_row(form.budgetMin) }}
            </div>
            <div class="col-6 col-md-4 mt-3">
                {{ form_row(form.budgetMax) }}
            </div>
            <div class="col-12 mt-3">
                {{ form_row(form.description) }}
            </div>
            <div class="col-12 mt-3">
{#                {{ form_row(form.media) }}#}
            </div>
        </div>
    </div>
    <div class="card-footer text-end">
        <div class="row mt-3">
            <div class="col-6 col-lg-3 offset-lg-6 d-grid gap-0">
                <a href="{{ absolute_url(path('app_frontend_demandeur_projet_index', {demandeur: demandeur.code})) }}" class="btn btn-outline-secondary btn-sm">Annuler</a>
            </div>
            <div class="col-6 col-lg-3 d-grid gap-0">
                <button type="submit" class="btn btn-main btn-sm btnSoumission">
                    {{ button_label|default('Publiez') }}
                </button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}