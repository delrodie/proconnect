    <main>
        <section class="connexion-box" id="connexionBox">
            <div class="container" data-aos="zoom-in">
                <div class="row">
                    <div class="col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3 connexion-box__inner px-20 py-20">
                        <h1 class="h1 fw-800 text-center logo">ProConnect</h1>
                        <h6 class="h6 label text-center label">Inscription</h6>
                        {{ form_errors(registrationForm) }}
                        {{ form_start(registrationForm, {'attr':{"class": 'mt-30'}}) }}
                            <div class="row">
                                <div class="form-group col-12 ">
                                    {{ form_widget(registrationForm.username) }}
                                    {{ form_errors(registrationForm.username) }}
                                </div>
                                <div class="form-group col-12 mt-4">
                                    {{ form_widget(registrationForm.plainPassword['first']) }}
{#                                    {{ form_errors(registrationForm.plainPassword['first']) }}#}
                                </div>
                                <div class="form-group col-12 mt-4">
                                    {{ form_widget(registrationForm.plainPassword['second']) }}
                                    {{ form_errors(registrationForm.plainPassword['first']) }}
                                </div>
{#                                <div class="form-group col-12 mt-4">#}
{#                                    {{ form_widget(registrationForm.confirmPassword) }}#}
{#                                    {{ form_errors(registrationForm.confirmPassword) }}#}
{#                                </div>#}
{#                                <div class="form-group col-12 mt-4">#}
{#                                    <input type="password" class="form-control form-control-lg" placeholder="Confirmer le mot de passe * ">#}
{#                                </div>#}
                                {% for statut in registrationForm.statut %}
                                    <div class="form-check col-12 col-lg-6 mt-3">
                                        {{ form_widget(statut,{"attr":{"class":"form-check-input"}}) }}
                                        {{ form_label(statut,null, {"attr":{"class":'form-check-label'}}) }}
                                        {{ form_errors(statut) }}
                                    </div>
                                {% endfor %}
                                <div class="form-check mt-3">
                                    {{ form_widget(registrationForm.agreeTerms) }}
{#                                    {{ form_label(registrationForm.agreeTerms) }}#}
{#                                    {{ form_row(registrationForm.agreeTerms) }}#}
{#                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">#}
                                    <label class="form-check-label" for="flexCheckDefault">
                                        J'ai lu et j'accepte toutes les <a href="#" target="_blank">conditions générales</a>
                                    </label>
                                </div>
                                <div class="d-grid gap-2 mt-3">
                                    <button type="submit" class="btn btn-main btn-lg">S'inscrire</button>
                                </div>
                            </div>
                            <p class="mt-3">
                                Vous avez déjà un compte ? <a href="{{ absolute_url(path('app_login')) }}">Se connecter</a>
                            </p>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
