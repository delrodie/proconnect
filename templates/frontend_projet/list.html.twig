{% extends 'base.html.twig' %}

{% block title %} Liste des projets {% endblock %}
{% block body %}
    <main>
        <section class="projects" id="projects">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3" data-aos="fade-up" data-aos-duration="2000">
                        <div class="card filter-box">
                            <div class="card-header">Filter</div>
                            <div class="card-body">
                                <div class="accordion" id="accordionProject">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                Domaines
                                            </button>
                                        </h2>
                                        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionProject">
                                            <div class="accordion-body">

                                                <form action="">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckService1">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckService1" title="Wellness and personal services">
                                                            Conseils en immobilier
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckService2">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckService2">
                                                            Comptabilité et fiscalité
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckService3">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckService3">
                                                            Marketing digital
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckService4">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckService4">
                                                            Design graphique
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckService5">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckService5">
                                                            Photographie et vidéographie
                                                        </label>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                Localisation
                                            </button>
                                        </h2>
                                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionProject">
                                            <div class="accordion-body">

                                                <form action="">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckLocation1">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckLocation1">
                                                            Abobo
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckLocation2">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckLocation2">
                                                            Adjamé
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckLocation3">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckLocation3">
                                                            Bingerville
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckLocation4">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckLocation4">
                                                            Cocody
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckLocation5">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckLocation5">
                                                            Marcory
                                                        </label>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                                Notation
                                            </button>
                                        </h2>
                                        <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionProject">
                                            <div class="accordion-body">

                                                <form action="">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckRating1">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckRating1">
                                                            <i class="bi bi-star-fill"></i>
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckRating2">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckRating2">
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckRating3">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckRating3">
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckRating4">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckRating4">
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                        </label>
                                                    </div>

                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckRating5">
                                                        <label class="form-check-label fz-16 fw-500 pl-3" for="flexCheckRating5">
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                            <i class="bi bi-star-fill"></i>
                                                        </label>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9" data-aos="fade-up">
                        <!-- Select filter -->
                        <div class="row mb-3">

                            <div class="col">
                                <!--Affichage des resultats 1 - 6 sur 20-->
                            </div>

                            <div class="col text-end filter-select">
                                <form action="{{ absolute_url(path('app_frontend_projet_list')) }}" id="filterForm">
                                    <select name="filter" id="filter" class="form-select" onchange="document.getElementById('filterForm').submit();">
                                        <option value="">-- Filtrer --</option>
                                        <option value="ALL">Toutes les projets</option>
                                        <option value="DATE">Par date</option>
                                        <option value="BUDGET">Par Budget</option>
                                    </select>
                                </form>
                            </div>
                        </div>
                        <div class="row row-cols-1 row-cols-md-2 g-4 projects-items">

                            {% for projet in projets %}
                                <div class="col projects-items__content">
                                    <a href="{{ absolute_url(path('app_frontend_projet_show',{"reference": projet.reference})) }}">
                                        <div class="card h-100">
                                            <div class="card-body">

                                                <div class="projects-items__content-author">
{#                                                    <div class="projects-items__content-avatar bg-main-gradient">#}
{#                                                        <img src="./assets/img/all/3d-render-african-american-worker-woman-with-helmet.png" alt="" class="img-fluid">#}
{#                                                    </div>#}
                                                    <div class="projects-items__content-infos pl-3">
                                                        <span class="badge bg-main">{{ projet.categorie }}</span>
                                                        <h6 class="h6">{{ projet.title }}</h6>
                                                        <div class="reference fz-16">
                                                            Par <span class="author fw-500">{{ projet.user }}</span> le {{ projet.created_at|date('d/m/Y')}} à {{ projet.created_at|date('H:i:s') }}
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="projects-items__content-details mt-2">
                                                    <div class="location"> <i class="bi bi-geo-alt"></i> {{ projet.lieu }}</div>
                                                </div>
                                                <div class="projects-items__content-countdown py-5">
                                                    <span class="fz-22 fw-500 px-2">{{ jour_restant(projet.reference)}}</span> jours restants pour postuler.
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            {% endfor %}



                        </div>
                        <!-- Pagination
                        <div class="marketplace" data-aos="fade-up">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li class="page-item"><a class="page-link" href="#"><span aria-hidden="true">&laquo;</span></a></li>
                                    <li class="page-item"><a class="page-link active" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#"><span aria-hidden="true">&raquo;</span></a></li>
                                </ul>
                            </nav>
                        </div>
                        -->
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}

{% block breadcrumb %}
    <section class="header py-30" id="breadcrumb"> </section>
{% endblock %}