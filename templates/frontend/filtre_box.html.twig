<div class="card filter-box">
    <div class="card-header">Filtre</div>
    <div class="card-body">
        <div class="accordion" id="accordionProject">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Domaines
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionProject">
                    <div class="accordion-body">

                        <form action="" id="filtreDomaine">
                            {% for domaine in domaines %}
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="domaine" value="{{ domaine.slug }}" id="filtreDomaine{{ domaine.id }}" onclick="document.getElementById('filtreDomaine').submit();">
                                    <label class="form-check-label fz-16 fw-500 pl-3" for="filtreDomaine{{ domaine.id }}" title="{{ domaine.title }}">
                                        {{ domaine.title }}
                                    </label>
                                </div>
                            {% endfor %}

                        </form>

                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Localit√©
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionProject">
                    <div class="accordion-body">

                        <form action="{{ absolute_url(path('app_frontend_projet_list')) }}" id="filtreLocamite">
                            {% for localite in localites %}
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="localite" value="{{ localite.slug }}" id="filtreLocalite{{ localite.id }}" onclick="document.getElementById('filtreLocamite').submit();">
                                    <label class="form-check-label fz-16 fw-500 pl-3" for="filtreLocalite{{ localite.id }}">
                                        {{ localite.title }}
                                    </label>
                                </div>
                            {% endfor %}

                        </form>

                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Notation
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionProject">
                    <div class="accordion-body">

                        <form action="">
