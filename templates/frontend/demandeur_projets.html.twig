                    {% include 'frontend/_demandeur_menu.html.twig' %}
                    <div class="col-12 col-lg-9 profile-content">
                        <h2 class="titre">Mes projets</h2>
                        <div class="text-end">
                            <a href="{{ absolute_url(path('app_frontend_demandeurprojet_ajout',{"demandeur": demandeur.code})) }}" class="btn btn-main btn-sm"><i class="bi bi-plus-circle-fill"></i> Ajouter un projet</a>
