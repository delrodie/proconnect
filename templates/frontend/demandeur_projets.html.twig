                                        <div class="card-body">
                                            <span class="badge bg-main">Domaine</span>
                                            <div class="row">
                                                <div class="col-9">
                                                    <h5 class="card-title">Recherche d'un menuisier</h5>
                                                    <div class="row">
                                                        <div class="col-4">
                                                            <i class="bi bi-geo-alt"></i> Abidjan Riviera 3
                                                        </div>
                                                        <div class="col-4">
                                                            <i class="bi bi-calendar"></i> 22/07/2024
                                                        </div>
                                                        <div class="col-4">
                                                            <i class="bi bi-stopwatch"></i> Il reste <span>2</span> jours
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-3 d-grid gap-2">
                                                    <a href="{{ absolute_url(path('app_frontend_demandeurprojet_ajout',{"demandeur": demandeur.code})) }}" class="btn btn-outline-secondary btn-sm">Modifier</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Supprimer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="card h-100 candidature">
                                        <div class="card-body text-center">
                                            <a href="#">
